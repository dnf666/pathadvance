<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pms.dao.file.FileMapper">
    <resultMap id="FileImpl" type="com.pms.model.file.FileImpl">
        <result property="id" column="file_id"/>
        <result property="fileName" column="file_name"/>
        <result property="url" column="url"/>
        <result property="fileClass" column="class"/>
        <result property="size" column="size"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="teamName" column="team_name"/>
        <result property="delFlag" column="del_flag"/>
        <result property="delTime" column="del_time"/>
        <result property="isPrivater" column="is_privater"/>
    </resultMap>

    <select id="selectByFileName" resultMap="FileImpl" >
        SELECT file_id,file_name,url,class,size,create_by,create_time,team_name,del_flag,del_time,is_privater
        FROM file
        WHERE file_name = #{fileName} AND del_flag = 0;
    </select>


    <delete id="deleteFile">
        DELETE FROM file
        WHERE file_name = #{fileName} AND team_name = #{teamName};
    </delete>

    <insert id="insertFileInfo">
        INSERT INTO file
        (file_id,file_name,url,class,size,create_by,create_time,team_name,del_flag,del_time,is_privater)
        VALUES
        (#{id},#{fileName},#{url},#{fileClass},#{size},#{createBy},#{createTime},#{teamName},#{delFlag},#{delTime},#{isPrivater})
    </insert>

    <update id="updateFileInfo" parameterType="com.pms.model.file.FileImpl" >
        UPDATE file
        <set>
            <if test="file_id != null">
                file_id = #{id},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="fileClass != null">
                class = #{fileClass},
            </if>
            <if test="size !=null">
                size = #{size},
            </if>
            <if test="createBy != null">
                create_by = #{createBy},
            </if>
            <if test="createTime !=null">
                create_time = #{createTime},
            </if>
            <if test="teamName !=null">
                team_name = #{teamName},
            </if>
            <if test="delFlag != null">
                del_flag = #{delFlag},
            </if>
            <if test="delTime != null">
                del_time = #{delTime},
            </if>
            <if test="isPrivater != null">
                is_privater = #{isPrivater}
            </if>
        </set>
        WHERE file_name = #{fileName};
    </update>

    <update id="deleteByDelFlag">
        UPDATE file
        <set>
            <if test="delFlag != 0">
                del_flag = #{delFlag},
            </if>
            <if test="delTime != null">
                del_time = #{delTime}
            </if>
        </set>
        WHERE file_name = #{fileName} AND team_name = #{teamName};
    </update>

    <update id="recoverFile">
        UPDATE file
        <set>
            <if test="delFlag = 0">
                del_flag = #{delFlag},
            </if>
            <if test="delTime != null">
                del_time = #{delTime}
            </if>
        </set>
        WHERE file_name = #{fileName} AND team_name = #{teamName};
    </update>

</mapper>